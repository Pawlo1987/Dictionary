<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.StudyPreviewFragment">

    <TextView
        android:id="@+id/tvTitleStPrFr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:fontFamily="@font/unkempt"
        android:text="@string/tvTitleStPrFr"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvWordsStPrFr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:layoutManager="LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGoStPrFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnGoStPrFr" />
    </LinearLayout>

</LinearLayout>